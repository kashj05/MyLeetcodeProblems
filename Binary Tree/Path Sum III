class Solution {
    public int pathSum(TreeNode root, int targetSum) {
        if (root == null) return 0;
        return countPaths(root, targetSum) + pathSum(root.left, targetSum) + pathSum(root.right, targetSum);
    }

    private int countPaths(TreeNode node, int targetSum) {
        if (node == null) return 0;
        return (node.val == targetSum ? 1 : 0) + countPaths(node.left, targetSum - node.val) + countPaths(node.right, targetSum - node.val);
    }
}

